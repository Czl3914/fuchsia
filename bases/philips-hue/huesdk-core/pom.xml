<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>org.ow2.chameleon.fuchsia.base.philips-hue</artifactId>
        <groupId>org.ow2.chameleon.fuchsia.base</groupId>
        <version>0.0.3-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>philips-hue-sdk-core</artifactId>
    <groupId>org.ow2.chameleon.fuchsia.base.philips-hue</groupId>
    <packaging>pom</packaging>
    <name>OW2 Chameleon - Fuchsia Base Philips Hue SDK Core</name>

    <properties>
        <file>src/main/resources/huelocalsdk.jar</file>
        <artifactId>hue-sdk-core</artifactId>
        <groupId>philips</groupId>
        <packaging>jar</packaging>
        <version>${project.version}</version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
